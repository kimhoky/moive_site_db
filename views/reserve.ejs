<div class="content">
	<h1>Movie Ticket Booking</h1>
	<div class="main">
		<h2>Multiplex Theatre Showing Screen</h2>
		<div class="demo">
			<div id="seat-map">
				<div class="front">SCREEN</div>					
			</div>
			<div class="booking-details">
				<ul class="book-left">
					<li>Movie </li>
					<li>Date </li>
					<li>Time </li>
					<li>Tickets</li>
					<li>Total</li>
					<li>Seats :</li>
				</ul>
				<ul class="book-right">
					<div class="movie-select">
						<select name="movie" id="movie">
						  	<option value="gingerclown"><%= title[0].movie_name %></option>
						</select>
					  </div>
					  <div class="day-select">
						<label for="day"></label>
						<input type="date" id="day" name="day">	<!--날짜 넣기-->
					  </div>
					  <div class="time-select">
						<label for="movie-time"></label>		<!--시간넣기-->
						<input type="time" id="movie-time" name="movie-time">
					  </div>
					<li>: <span id="counter">0</span></li>
					<li>: <b><i>₩</i><span id="total">0</span></b></li>
				</ul>
				<div class="clear"></div>
				<ul id="selected-seats" class="scrollbar scrollbar1"></ul>
			
						
				<a class="checkout-button" onclick="reserveCheck()">Book Now</a>
			<!-- </form>	 -->
				<div id="legend"></div>
			</div>
			<div style="clear:both"></div>
	    </div>

		<script type="text/javascript">
			var seat = [];
			var sm = 0;
			var ttotal = 0;
			var price = <%= title[0].movie_price %>; //price
			$(document).ready(function() {
				$cart = $('#selected-seats'), //Sitting Area
				$counter = $('#counter'), //Votes
				$total = $('#total'); //Total money
				
				var sc = $('#seat-map').seatCharts({
					map: [  //Seating chart
						'aaaaaaaaaa',
						'aaaaaaaaaa',
						'__________',
						'aaaaaaaa__',
						'aaaaaaaaaa',
						'aaaaaaaaaa',
						'aaaaaaaaaa',
						'aaaaaaaaaa',
						'aaaaaaaaaa',
						'__aaaaaa__'
					],
					naming : {
						top : false,
						getLabel : function (character, row, column) {
							return column;
						}
					},
					legend : { //Definition legend
						node : $('#legend'),
						items : [
							[ 'a', 'available',   'Available' ],
							[ 'a', 'unavailable', 'Sold'],
							[ 'a', 'selected', 'Selected']
						]					
					},
					click: function () { //Click event
						if (this.status() == 'available') { //optional seat
							$('<li name="seat">Row'+(this.settings.row+1)+' Seat'+this.settings.label+'</li>')
								.attr('id', 'cart-item-'+this.settings.id)
								.data('seatId', this.settings.id)
								.appendTo($cart);

							$counter.text(sc.find('selected').length+1);
							$total.text(recalculateTotal(sc)+price);
							ttotal += price;
							sm += 1;
							seat.push((this.settings.row+1)+'_'+this.settings.label);

										
							return 'selected';
						} else if (this.status() == 'selected') { //Checked
								//Update Number
								$counter.text(sc.find('selected').length-1);
								//update totalnum
								$total.text(recalculateTotal(sc)-price);
								ttotal -= price;
								for(var i = 0; i < seat.length; i++){
									if (seat[i] === (this.settings.row+1)+'_'+this.settings.label) { 
											seat.splice(i, 1); 
											i--; 
										}
								}
								
									
								//Delete reservation
								$('#cart-item-'+this.settings.id).remove();
								//optional
								return 'available';
						} else if (this.status() == 'unavailable') { //sold
							return 'unavailable';
						} else {
							return this.style();
						}
					}
				});
				//sold seat
				<% for (var i = 0; i<seats.length; i++) { %>
					sc.get(['<%= seats[i].reserve_seat %>']).status('unavailable');
				<% }; %>
			});
			//sum total money
			function recalculateTotal(sc) {
				var total = 0;
				sc.find('selected').each(function () {
					total += price;
				});
						
				return total;
			}

			function reserveCheck() {
				var movie_name = '<%= title[0].movie_name %>';
				var movie_time = '';
				if (confirm(
					"이 내용으로 예매 하시겠습니까?"
					+ " 영화 : " + movie_name
					+ " 시간 : " + movie_time
					+ " 가격 : " + ttotal
					+ " 좌석 : " + seat
					) == true){    //확인
							document.location.href="/reserving/?movie_name="+movie_name+"&movie_time="+movie_time+"&seats="+seat;
							}else{   //취소
								return false;
							}
			}
		</script>
