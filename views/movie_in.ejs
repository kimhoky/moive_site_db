
<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="author" content="webstoryboy">
    <meta name="description" content="티켓팅을 위한 사이트">
    <meta name="keywords" content="티켓팅을 위한 사이트">
    <title>fresh_tomato</title>

    <!-- css -->
    <link rel="stylesheet" href="./reset.css">
    <link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="./swiper.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- 웹 폰트 -->
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:100,300,400,500,700,900&subset=korean" rel="stylesheet">
    

</head>
<body>
    
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="header clearfix">
                    <h1>
                        <a href="/">
                        <strong><img src="assets/img/freash_tomato_main.png" alt="LIFE THEATER" style="transform: translateY(-20px);"></strong>
                    
                        </a>    
                    </h1>
                    <nav id="mNav">
                        <h2 class="ir_so">티켓팅 전체메뉴</h2>
                        <a href="#" class="ham"><span></span></a>
                    </nav>
                    <nav class="nav">
                        <ul class="clearfix">
                            <li><a href="/movie">영화</a></li>
                            <li><a href="/the_moie">영화예매</a></li>    
                            <li><a href="/my_page">내정보</a></li>        
                            <% if (IS) { %>
                                <li>  <a href="#" onclick="logoutCheck()"><%= nickname %></a>  </li>
                                <% } else { %>
                                <li><a href="/login">로그인</a></li>
                                <% }; %>
                        </ul>
                           
                       
                            
                  
                        </ul>
                    </nav>    
                </div>
            </div>
        </div>
    </header>
    <!-- //header -->

   <div class="main_box">

        <div class="info-box"> <!-- 상세정보 박스-->
            <div class="detail-title">
            </div>
            <div class="movie-intro">
                <img src="assets/img/<%= list[0].movie_name %>.jpg">
            </div>
                <button class="btn_T"><a href="/reserve?movie_name=<%= list[0].movie_name %>" style ="color: white;">예매하기</a></button>
        </div>
        
   
        <div class="main_text"> 
            <div>
                <p class="p_소개1">[ 소개 ]</p>
                <hr>
                <div>
                <p class="p_소개내용1">
                    <%= list[0].movie_intro %>
                </p>
            </div>
            </div>
        </div>

        <div class="main_text2"> 
            <div>
                <p class="p_기본정보1">[ 기본정보 ]</p>
                <hr>
                <div>
                <p class="p_기본정보내용1">
                    개봉 &nbsp; &nbsp;| &nbsp; &nbsp; <span id="formatted-date"></span><br>
                    등급 &nbsp; &nbsp;| &nbsp; &nbsp; <%= list[0].movie_agecut %> 관람가<br>
                    장르 &nbsp; &nbsp;| &nbsp; &nbsp; <%= list[0].movie_genre %><br>
                    감독 &nbsp; &nbsp;| &nbsp; &nbsp; <%= list[0].movie_director %><br>
                    주연 &nbsp; &nbsp;| &nbsp; &nbsp; <%= list[0].movie_star %><br>
                    
                </p>
            </div>
            </div>
            <div class="main_text3"> 
                <div>
                  <p class="p_한줄평가">[ 감상평 및 평점  ] <span class="rating-info"></span></p>
                  <hr>
                  <div class="comment-bar" style="width:100%">
                    <form action="/inreview" calass = "form" id="form" method="POST" style="width:100%; display: flex; justify-content: center;">
                        <input type="text" id="comment-input" name="olreview" placeholder="감상평을 작성해주세요..." style="width:70%; height:50%" >
                        
                       
                       <input type="text" name="moviename" value="<%= list[0].movie_name %>" style="display:none" />
                        
                          <fieldset class="rate">
  <input type="radio" id="rating-input" name="rating" value="10"><label for="rating10" title="5점"></label>
  <input type="radio" id="rating-input" name="rating" value="9"><label class="half" for="rating9" title="4.5점"></label>
  <input type="radio" id="rating-input" name="rating" value="8"><label for="rating8" title="4점"></label>
  <input type="radio" id="rating-input" name="rating" value="7"><label class="half" for="rating7" title="3.5점"></label>
  <input type="radio" id="rating-input" name="rating" value="6"><label for="rating6" title="3점"></label>
  <input type="radio" id="rating-input" name="rating" value="5"><label class="half" for="rating5" title="2.5점"></label>
  <input type="radio" id="rating-input" name="rating" value="4"><label for="rating4" title="2점"></label>
  <input type="radio" id="rating-input" name="rating" value="3"><label class="half" for="rating3" title="1.5점"></label>
  <input type="radio" id="rating-input" name="rating" value="2"><label for="rating2" title="1점"></label>
  <input type="radio" id="rating-input" name="rating" value="1"><label class="half" for="rating1" title="0.5점"></label>
</fieldset>

<input type="number" id="rating-input" min="1" max="10" name="rate" placeholder="평점" style="height: 50%" />

                        <button id="submit-btn" type="submit">등록</button>
   
                        
                    </form>
                    
                  </div>
                
                </div>
              </div>
              
        </div>
        <div class="Comments">
  <div class="review_box">
    <% if (reviews[0] != null) { %>
      <% for (var i = 0; i < reviews.length; i++) { %>
        <div class="comment-box">
          <p>작성자: <%= reviews[i].review_uid %></p>
          <p>한줄평: <%= reviews[i].review_olreview %></p>
          <p>평점: <%= reviews[i].review_grade %></p>
        </div>
      <% }; %>
    <% } else { %>
      <div>
        <h3>검색결과 없음</h3>
      </div>
    <% }; %>
  </div>
</div>
    </div>


        
        

          
</div>



    


    <div class="detail-end"></div> 

    
</body>

<script>
    function logoutCheck() {
            if (confirm("정말 로그아웃하시겠습니까??") == true){    //확인
                document.location.href="/logoutprocess";
            }else{   //취소
                return false;
            }
        }

     
  </script>



  <script>
    window.onload = function() {
      var dateString = "<%= list[0].movie_releasedate %>";
      var dateObj = new Date(dateString);

      var year = dateObj.getFullYear();
      var month = ("0" + (dateObj.getMonth() + 1)).slice(-2);
      var day = ("0" + dateObj.getDate()).slice(-2);

      var formattedDate = year + "년 " + month + "월 " + day + "일";

      document.getElementById("formatted-date").innerHTML = formattedDate;
    };
    function logoutCheck() {
            if (confirm("정말 로그아웃하시겠습니까??") == true){    //확인
                document.location.href="/logoutprocess";
            }else{   //취소
                return false;
            }
        }
  </script>
</html>
