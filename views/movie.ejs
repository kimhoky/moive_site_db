<!-- 자바스크립트 라이브러리 -->
<script src="assets/js/jquery.min_1.12.4.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
<script src="assets/js/ie-checker.js"></script>
<script src="assets/js/swiper.min.js"></script>
<script>
    //배너 이미지 슬라이드
    var swiper = new Swiper('.swiper-container',{
        pagination: {
            el: '.swiper-pagination',
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        autoplay: {
            delay: 5000,
        },
    });
    
    //영화차트 탭 메뉴
    var movBtn = $(".movie_title > ul > li"); // movie_title과 연동되는 버튼 > 자식 ui > 자식 li 버튼 4개
    var movCont = $(".movie_chart > div");  // 컨텐츠 차트 4개

    // movCont.hide().eq(0).show(); // 첫번째만 보여줌

    movBtn.click(function(e){ //화면 위로 올라가는 거 차단
        e.preventDefault();
        var target = $(this);  // 버튼 클릭한 곳 this    
        var index = target.index();  // 버튼에 번호를 매김
        movBtn.removeClass("active");   
        target.addClass("active");    //클릭한 곳(해당 번호)에 활성화
        movCont.css("display","none"); 
        movCont.eq(index).css("display","block"); //해당되는 번호만 보여줌
    });
    function logoutCheck() {
            if (confirm("정말 로그아웃하시겠습니까??") == true){    //확인
                document.location.href="/logoutprocess";
            }else{   //취소
                return false;
            }
        }
</script>
