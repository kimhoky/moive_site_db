         <!-- 검색창 -->
         <% if (title[0] != null) { %>
            <% for (var i=0; i < title.length; i++) { %> 
            <div class="well search-result">
                <div class="row">
                    <a href="#">
                        <div class="col-xs-6 col-sm-3 col-md-3 col-lg-2">
                            <img class="img-responsive" src="assets/img/<%= title[i].movie_name %>.jpg" alt="">
                        </div>
                        <div class="col-xs-6 col-sm-9 col-md-9 col-lg-10 title">
                            <h3><%= title[i].movie_name %></h3>
                            <p><%= title[i].movie_name %></p>
                        </div>
                    </a>
                </div>
            </div>
            
        <% }; %>
        
        <div class="row">
            <button type="button" class="btn btn-info  btn-block">
        </div>
    </div>
            
        <% }else { %>
            <div>
                <h3>검색결과 없음</h3>
            </div>
        <% }; %>
